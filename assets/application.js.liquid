// DROPDOWN NAVBAR HOVER FEATURE
let dropdown = document.querySelector('.dropdown-btn')
let subLinkGrandParent = document.querySelector('.sublink-grandparent');

dropdown.addEventListener('mouseover', () => {
  subLinkGrandParent.classList.toggle('toggle')
})  

window.addEventListener('click', () => {
  subLinkGrandParent.classList.remove('toggle')
})

// NAVBAR DROP DOWN MENU
let menu_icon_box = document.querySelector(".menu_icon_box");
let links = document.querySelectorAll(".nav-links")
let navContainer = document.querySelector('.nav-container');
console.log(links)

menu_icon_box.addEventListener('click', () => {  
  menu_icon_box.classList.toggle('active')
  // navContainer.style.display = 'flex'
  // navContainer.style.displayDirection = 'column'
  links.forEach(link => {
    let navLinks = link.textContent;
    console.log(navLinks)
    navLinks.classList.toggle('active')
  });
})

document.addEventListener('click', (e) => {
    if (!menu_icon_box.contains(e.target) && !links.contains(e.target)) {
        menu_icon_box.classList.remove("active");
        links.classList.remove("active");
    }
})